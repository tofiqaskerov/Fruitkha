@model IEnumerable<Product>


<a href="/dashboard/product/create" class="btn btn-success btn-icon-split">
    <span class="icon text-white-50">
        <i class="fas fa-plus"></i>
    </span>
    <span class="text">Create</span>
</a>

<!-- DataTales Example -->
<div class="card shadow my-4">
   
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Discound</th>
                        <th>Photo</th>
                        <th>IsSlider</th>
                        <th>IsDelete</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Discound</th>
                        <th>Photo</th>
                        <th>IsSlider</th>
                        <th>IsDelete</th>
                        <th>Action</th>

                    </tr>
                </tfoot>
                <tbody>
                   @foreach(var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>@product.Quantity</td>
                            <td>@product.Discound</td>
                            <td>
                                <img src="@product.CoverPhoto" width="150" height="150"/>
                            </td>
                            <td>
                                @{
                                    if (product.IsSlider == true)
                                    {
                                        <button class="btn btn-outline-success">+</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-danger">-</button>
                                    }
                                }
                            </td>
                            <td>
                                @{
                                    if (product.IsDelete == false)
                                    {
                                        <button class="btn btn-outline-danger">-</button>   
                                    }
                                    else
                                    {
                                         <button class="btn btn-outline-success">+</button>
                                       
                                    }
                                }
                            </td>
                            <td>
                                <a class="btn btn-outline-danger"  href="/dashboard/product/delete/@product.Id">Delete</a>
                                <a class="btn btn-outline-warning" href="/dashboard/product/update/@product.Id">Update</a>
                                <a product-value="@product.Id"  class="btn btnSave btn-outline-warning">Restore</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    $(".btnSave").click(function(e) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                let productId = e.currentTarget.attributes[0].value
                $.ajax({
                    method: "POST",
                    url: "product/restore/",
                    data: {
                        id: productId
                    }
                })
                Swal.fire({
                    title: 'Restore',
                    text: "This product is restore!",
                    icon: 'success',

                }).then((result) => {
                    window.location = "product"
                })

            }
        })
    })
</script>
}
